#!/bin/bash

opcion=$1
rutaMan=/usr/share/man/man7

if [ "$opcion" == "-i" ]
    then echo Instalaci贸n del manual del servidor en Linux... ;
        echo . ;
        echo . ;
        echo . ; 

        sudo cp client.7.gz $rutaMan ;

        sudo mandb ;
        
        echo Instalaci贸n de dependencias de Python ;
        pip3 install matplotlib ;
        pip3 install Pillow ;
        pip3 install numpy ;
        echo Instalando tkinter con sudo apt-get install python3-tk. Puede fallar, dependiendo de su SO y versi贸n de Python ;
        sudo apt-get install python3-tk ;
        pip3 install mysql-connector-python ;
        
        echo Ejecuci贸n del cliente... ;
        cd ..
        ./pokemonClient.py 127.0.0.1 9999;
        
    elif ["$opcion" == "-d"]
        then echo Eliminando el manual de Linux ... 
            cd $rutaMan ;
            sudo rm client.7.gz ;
            
    else
        echo Uso para instalar cliente: ./make_cliente -i ;
        echo Uso para desinstalar cliente: ./make_cliente -d ;
        
fi
